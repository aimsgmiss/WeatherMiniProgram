
.select-box {
  position: relative;
  width: 100%;
  font-size: 30rpx;
  padding: 10rpx 0rpx;
}

.select-current {
  position: relative;
  width: 100%;
  padding: 0 20rpx;
  line-height: 70rpx;
  border-radius: 6rpx;
  display: flex;
}

.current-name {
  display: block;
  width: 85%;
  height: 100%;
  word-wrap: normal;
  overflow: hidden;
}

.option-list {
  position: absolute;
  width: 100%;
  padding: 12rpx 20rpx 10rpx 0rpx;
  border-radius: 60rpx;
  z-index: 99;
}

.option {
  display: flex;
  width: 100%;
  padding-left: 30rpx;
  line-height: 100rpx;
  border-bottom: 1rpx solid #eee;
  background: rgb(245,245,245);
}

.option-left{
  width: 80%;
}

.option-right{
  width: 20%;
}

.option:last-child {
  border-bottom: none;
  padding-bottom: 0;
}

.navigator-arrow-down {
  width: 15%;
}

.navigator-arrow-down:after{
  content: "";
  display: inline-block;
  height: 18rpx;
  width: 18rpx;
  border-width: 0 6rpx 6rpx 0;
  border-color: var(--weui-FG-2);
  border-style: solid;
  transform: matrix(0.71, 0.71, -0.71, 0.71, 0, 0);
  right: 28rpx;
}

.navigator-arrow-up {
  
  width: 15%;
}

.navigator-arrow-up:after{
 
  content: "";
  display: inline-block;
  height: 18rpx;
  width: 18rpx;
  border-width: 6rpx 0 0 6rpx;
  border-color: var(--weui-FG-2);
  border-style: solid;
  transform: matrix(0.71, 0.71, -0.71, 0.71, 0, 0);
  right: 28rpx;
}