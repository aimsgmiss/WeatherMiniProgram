/* pages/components/pages/search-result-header/search-result-header.wxss */

.search-result-header{
  margin: 20rpx 5rpx 5rpx 5rpx;
  font-size: 32rpx;
  height: 50rpx;
  padding: 20rpx 10rpx 10rpx 10rpx;
  background:rgb(0, 195, 255);
  display: flex;
  color: whitesmoke;
  border: 0.5rpx solid rgba(0, 0, 0, 0.1);
  border-radius: 15rpx;
  font-weight: bold;
}

.search-result-header-left{
  width: 75%;
  display: flex;
}

.search-result-header-right{
  width: 25%;
  padding-left: 128rpx;
  display: flex;
}

.navigator-arrow-before{
  padding-left: 26rpx;
  position: relative;
}

.navigator-arrow-before:before{
  content: "";
  display: inline-block;
  height: 22rpx;
  width: 22rpx;
  border-width: 0rpx 0rpx 2rpx 2rpx;
  border-color: var(--weui-FG-2);
  border-style: solid;
  transform: matrix(0.71, 0.71, -0.71, 0.71, 0, 0);
  left: 0rpx;
}

.navigator-arrow-after {
  padding-right: 0rpx;
  position: relative;
}

.navigator-arrow-after:after{
  content: "";
  display: inline-block;
  height: 22rpx;
  width: 22rpx;
  border-width: 2rpx 2rpx 0 0;
  border-color: var(--weui-FG-2);
  border-style: solid;
  transform: matrix(0.71, 0.71, -0.71, 0.71, 0, 0);
  right: 0rpx;
}
